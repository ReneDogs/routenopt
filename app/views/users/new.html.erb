<h1>Registrierung</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  <%= f.label :Anrede %><br />
  <%= f.select :title, %w(Frau Herr) %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
   <div class="actions">
    <%= f.submit "registrieren" %>
  </div>
<% end %>